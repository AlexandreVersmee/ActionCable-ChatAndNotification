<% if logged_in? %>
<div class="row">
  <div class="col-lg-2 col-md-2 col-xs-2 chat-popup">

    <!-- Titre de la conversation -->
    <div class="col-lg-12 col-md-12 col-xs-12 chat-header">
      <div class="col-lg-11 col-md-11 col-xs-11 no-padding chat-user-name">
        Un titre très très très très très très très très très très longgggg !
      </div>
      <div class="col-lg-1 col-md-1 col-xs-1 no-padding">
        <button type="button" class="close">
          <span>&times;</span>
        </button>
      </div>
    </div>

    <!-- Zone d'affichage des messages -->
    <div class="col-lg-12 col-md-12 col-xs-12 chat-content">

    </div>

    <!-- Champs de réponse -->
    <div class="col-lg-12 col-md-12 col-xs-12 chat-input-div">
      <form>
        <div class="row">
          <div class="col-lg-12 col-md-12 col-xs-12">
            <input class="no-margin-bottom" type="text" placeholder="Entrez votre message"
            data-id="_" data-name="_" data-input="chat-input">
          </div>
        </div>
      </form>

    </div>
  </div>
</div>
<% end %>